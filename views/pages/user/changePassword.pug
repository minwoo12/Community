extends ../../layout/main

block content
    .form__container
        form(action=`/user/${routes.changePassword}`, method="post")
            input(type="password", name="oldPassword", placeholder="Current Password", required=true)
            input(type="password", name="newPassword", placeholder="new Password", required=true)
            input(type="password", name="newPasswordVerify", placeholder="new Password Verify", required=true)
            input.input__button(type="submit", value="change Password")