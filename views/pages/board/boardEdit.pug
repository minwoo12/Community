extends ../../layout/main

block content
    .boardEdit__form
        form(action=routes.boardEdit(board.id), method="post")
            input(type="text", name="title", placeholder="Title" value=board.title)
            input(type="textarea", name="content" value=board.content)
            input(type="submit", value="Edit")
        a(href=routes.boardDelete(board.id))
            button Delete